<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:statusBarColor">@color/colorPrimary</item>-->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
         <item name="android:windowContentTransitions">true</item>
        <item name="android:textSize">@dimen/x35</item>
    </style>

    <style name="FullScreen" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/imageBG</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AddNoteStyle" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SelectImageStyle" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">@dimen/item_height</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">@dimen/x50</item>
        <item name="android:paddingEnd">@dimen/x50</item>
        <item name="android:paddingTop">@dimen/y20</item>
        <item name="android:paddingBottom">@dimen/y15</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="TextInputEditStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="popipwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popupwindow_show</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/popupwindow_hiden</item>
        <!-- 指定消失的动画xml -->
    </style>

    <style name="SettingsTitleStyle">
        <item name="android:background">@color/settingsTitleBG</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/x40</item>
        <item name="android:paddingStart">@dimen/x30</item>
        <item name="android:paddingTop">@dimen/y10</item>
        <item name="android:padding">@dimen/y10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SettingsItemStyle">
        <item name="android:textSize">@dimen/x40</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SettingsLineStyle">
        <item name="android:background">@color/line</item>
        <item name="android:layout_marginStart">@dimen/x50</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y1</item>
    </style>

    <style name="SettingsLLStyle">
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y150</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/x30</item>
    </style>

    <style name="PointStyle">
        <item name="android:src">@mipmap/ic_point_normal</item>
        <item name="android:layout_margin">@dimen/x10</item>
        <item name="android:layout_width">@dimen/x50</item>
        <item name="android:layout_height">@dimen/x50</item>
    </style>

    <style name="PasswordStyle">
        <item name="android:clickable">true</item>
        <item name="android:layout_marginTop">@dimen/y30</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textColor">@color/password_text_selector</item>
        <item name="android:textSize">@dimen/x60</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/password_selector</item>
    </style>


</resources>
