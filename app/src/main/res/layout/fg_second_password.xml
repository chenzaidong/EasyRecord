<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">
    <TextView
        android:id="@+id/tv_title"
        android:layout_marginTop="@dimen/y100"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/second_input_password"/>
    <LinearLayout
        android:id="@+id/ll_icon"
        android:layout_marginTop="@dimen/y30"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_psw_1"
            style="@style/PointStyle"/>
        <ImageView
            android:id="@+id/iv_psw_2"
            style="@style/PointStyle"/>
        <ImageView
            android:id="@+id/iv_psw_3"
            style="@style/PointStyle"/>
        <ImageView
            android:id="@+id/iv_psw_4"
            style="@style/PointStyle"/>
    </LinearLayout>
    <GridLayout
        android:id="@+id/gl_psw"
        android:padding="@dimen/x50"
        android:layout_marginTop="@dimen/y100"
        android:orientation="horizontal"
        android:useDefaultMargins="true"
        android:alignmentMode="alignBounds"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:rowCount="4"
        android:columnCount="3"
       >
        <TextView
            android:id="@+id/tv_num_1"
            android:text="1"
            style="@style/PasswordStyle"/>
        <TextView
            android:id="@+id/tv_num_2"
            android:text="2"
            style="@style/PasswordStyle"/>
        <TextView
            android:id="@+id/tv_num_3"
            android:text="3"
            style="@style/PasswordStyle"/>
        <TextView
            android:id="@+id/tv_num_4"
            android:text="4"
            style="@style/PasswordStyle"/>
        <TextView
            android:id="@+id/tv_num_5"
            android:text="5"
            style="@style/PasswordStyle"/>
        <TextView
            android:id="@+id/tv_num_6"
            android:text="6"
            style="@style/PasswordStyle"/>
        <TextView
            android:id="@+id/tv_num_7"
            android:text="7"
            style="@style/PasswordStyle"/>
        <TextView
            android:id="@+id/tv_num_8"
            android:text="8"
            style="@style/PasswordStyle"/>
        <TextView
            android:id="@+id/tv_num_9"
            android:text="9"
            style="@style/PasswordStyle"/>
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/x50"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x200"
            />
        <TextView
            android:id="@+id/tv_num_0"
            android:text="0"
            style="@style/PasswordStyle"/>
        <TextView
            android:id="@+id/tv_delete"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/delete"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/x50"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x200"/>
    </GridLayout>
    <TextView
        android:textSize="@dimen/x40"
        android:id="@+id/tv_cancel"
        android:layout_marginTop="@dimen/y200"
        android:text="@string/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>