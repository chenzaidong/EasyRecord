<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_finger"
            android:gravity="center_horizontal"
            android:descendantFocusability="blocksDescendants"
            android:clickable="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_marginTop="@dimen/y200"
                android:layout_marginBottom="@dimen/y200"
                android:src="@mipmap/logo"
                android:layout_width="@dimen/x200"
                android:layout_height="@dimen/x200"/>
            <ImageView
                android:src="@mipmap/ic_finger"
                android:layout_width="@dimen/x300"
                android:layout_height="@dimen/x300"/>
            <TextView
                android:textSize="@dimen/x50"
                android:textColor="@color/text_finger_print"
                android:text="@string/finger_print"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    <TextView
        android:id="@+id/tv_other"
        android:textSize="@dimen/x50"
        android:layout_marginBottom="@dimen/y50"
        android:text="@string/other_methods"
        android:textColor="@color/text_finger_print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>